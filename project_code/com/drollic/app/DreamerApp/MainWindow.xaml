<Window x:Class="DreamerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" ResizeMode="NoResize" WindowState="Maximized">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="dream" Click="Button_Click_1" Grid.Row="10" Grid.Column="1" FontSize="48"/>
        <TextBox x:Name="input" TextWrapping="Wrap" Grid.Row="10" FontSize="48"/>
        <Image x:Name="result" Source="{Binding}" HorizontalAlignment="Left" Grid.RowSpan="10" VerticalAlignment="Top" Grid.ColumnSpan="2" Stretch="UniformToFill"/>

    </Grid>
</Window>
